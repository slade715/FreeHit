<?xml version="1.0" encoding="utf-8"?>
<com.debut.ellipsis.freehit.About.ForegroundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lib_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:background="@color/cardview_dark_background"
    android:elevation="@dimen/_3sdp"
    android:foreground="?android:selectableItemBackground"
    android:minHeight="?android:listPreferredItemHeight"
    android:paddingBottom="@dimen/_8sdp"
    android:paddingTop="@dimen/_14sdp"
    android:stateListAnimator="@animator/raise">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/progress_status_image"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:padding="@dimen/_3sdp" />

    <com.debut.ellipsis.freehit.About.BaselineGridTextView
        android:id="@+id/progress_name"
        lineHeightHint="@dimen/_20sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_toEndOf="@id/progress_status_image"
        android:letterSpacing="0.01"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <com.debut.ellipsis.freehit.About.BaselineGridTextView
        android:id="@+id/progress_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/progress_name"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_toEndOf="@id/progress_status_image"
        android:ellipsize="end"
        android:letterSpacing="0.01"
        android:textColor="@color/match_card_text"
        android:textSize="@dimen/_12sdp" />

</com.debut.ellipsis.freehit.About.ForegroundRelativeLayout>