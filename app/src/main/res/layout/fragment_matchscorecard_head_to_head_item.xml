<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundcolor"
    tools:context="com.debut.ellipsis.freehit.Matches.ScoreCard.HeadToHeadFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:cardBackgroundColor="?cardsbackground"
        card_view:cardCornerRadius="@dimen/_8sdp"
        card_view:cardElevation="@dimen/_2sdp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/compare_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:textSize="@dimen/_15sdp"
                android:textColor="?attr/textcolor"
                tools:text="MATCHES WON" />

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/compare_type_name">
                <!--.....Team A...... -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/team1_value"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/_5sdp"
                        android:textColor="?attr/textcolor"
                        android:textSize="@dimen/_13sdp"
                        tools:text="47" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@android:color/darker_gray" />
                <!--......Team B...... -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/team2_value"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/_5sdp"
                        android:textColor="?attr/textcolor"
                        android:textSize="@dimen/_13sdp"
                        tools:text="55" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>