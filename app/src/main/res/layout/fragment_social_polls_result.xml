<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/option_1"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                tools:text="Option 1" />

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progress_bar_option1"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_toEndOf="@+id/option_1"
                app:rcBackgroundPadding="5dp" />

            <TextView
                android:id="@+id/percentage_option_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toEndOf="@+id/progress_bar_option1"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:text="21%" />

            <TextView
                android:id="@+id/votecount_option_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toEndOf="@+id/percentage_option_1"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_10sdp"
                tools:text="( 9999 )" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/option_2"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                tools:text="Option 2" />

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progress_bar_option2"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_toEndOf="@+id/option_2"
                app:rcBackgroundPadding="5dp" />

            <TextView
                android:id="@+id/percentage_option_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toEndOf="@+id/progress_bar_option2"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:text="21%" />

            <TextView
                android:id="@+id/votecount_option_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toEndOf="@+id/percentage_option_2"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_10sdp"
                tools:text="( 9999 )" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/option_3"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                tools:text="Option 3" />

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progress_bar_option3"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_toEndOf="@+id/option_3"
                app:rcBackgroundPadding="5dp" />

            <TextView
                android:id="@+id/percentage_option_3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toEndOf="@+id/progress_bar_option3"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:text="21%" />

            <TextView
                android:id="@+id/votecount_option_3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toEndOf="@+id/percentage_option_3"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_10sdp"
                tools:text="( 9999 )" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/option_4"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                tools:text="Option 4" />

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progress_bar_option4"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_toEndOf="@+id/option_4"
                app:rcBackgroundPadding="5dp" />

            <TextView
                android:id="@+id/percentage_option_4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toEndOf="@+id/progress_bar_option4"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:text="21%" />

            <TextView
                android:id="@+id/votecount_option_4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toEndOf="@+id/percentage_option_4"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_10sdp"
