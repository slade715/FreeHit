<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/Batting_Values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/batting_heading"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/batsman_value"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:textAlignment="viewStart"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_12sdp"
                tools:text="Danushka Gunathilaka" />

            <TextView
                android:id="@+id/player_out_type"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/batsman_value"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="?attr/secondarytextcolor"
                tools:text="c and b Mohammad Hafeez" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/batsman_value">

                <LinearLayout
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player_yet_average_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:text="AVG : "
                        android:textColor="?attr/textcolor"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/player_yet_average_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="invisible"
                        android:textColor="?attr/secondarytextcolor"
                        tools:text="99.99" />

                    <View
                        android:id="@+id/sr_average_view"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:background="?attr/playingx1heading"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/player_yet_sr_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:text="SR : "
                        android:textColor="?attr/textcolor"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/player_yet_sr_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="invisible"
                        android:textColor="?attr/secondarytextcolor"
                        tools:text="99.99" />


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/runs_value"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_1sdp"
            android:textAlignment="center"
            android:textColor="?attr/textcolor"
            android:textSize="@dimen/_10sdp"
            tools:text="999" />

        <TextView
            android:id="@+id/balls_value"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_1sdp"
            android:textAlignment="center"
            android:textColor="?attr/textcolor"
            android:textSize="@dimen/_10sdp"
            tools:text="999" />

        <TextView
            android:id="@+id/fours_value"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_3sdp"
            android:textAlignment="center"
            android:textColor="?attr/textcolor"
            android:textSize="@dimen/_10sdp"
            tools:text="999" />

        <TextView
            android:id="@+id/sixes_value"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_1sdp"
            android:textAlignment="center"
            android:textColor="?attr/textcolor"
            android:textSize="@dimen/_10sdp"
            tools:text="999" />

        <TextView
            android:id="@+id/StrikeRate_value"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_1sdp"
            android:textAlignment="center"
            android:textColor="?attr/textcolor"
            android:textSize="@dimen/_10sdp"
            tools:text="999.999" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/Batting_Values"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/divider" />

</RelativeLayout>