<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/cardsbackground"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/FallOfWicket_Values"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_15sdp"
        android:layout_below="@id/Bowling_Table"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/FallOfWicket_Value"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            tools:text="Shan Masood"
            android:textAlignment="viewStart"
            android:textColor="?attr/textcolor"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/fow_overs_value"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            tools:text="23.3"
            android:textAlignment="center"
            android:textColor="?attr/textcolor"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/fow_score_value"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            tools:text="61/1"
            android:textAlignment="center"
            android:textColor="?attr/textcolor"
            android:textSize="@dimen/_11sdp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/FallOfWicket_Values"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/divider" />

</RelativeLayout>