<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlcontainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_165sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        card_view:cardBackgroundColor="?attr/cardsbackground"
        card_view:cardCornerRadius="@dimen/_3sdp"
        card_view:cardElevation="@dimen/_5sdp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_3sdp">

            <TextView
                android:id="@+id/series_name_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                tools:text="India Tour of Sri Lanka, 2017" />

            <TextView
                android:id="@+id/match_name_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/series_name_upcoming"
                android:paddingEnd="@dimen/_3sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:textColor="?attr/secondarytextcolor"
                android:textSize="@dimen/_10sdp"
                tools:text="4th ODI" />

            <TextView
                android:id="@+id/stadium_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/series_name_upcoming"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_toEndOf="@+id/match_name_upcoming"
                android:paddingTop="@dimen/_2sdp"
                android:textColor="?attr/secondarytextcolor"
                android:textSize="@dimen/_10sdp"
                tools:text=" Bangalore" />

            <TextView
                android:id="@+id/match_time_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/series_name_upcoming"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="?attr/secondarytextcolor"
                android:textSize="@dimen/_9sdp"
                tools:text="1:30 PM" />

            <TextView
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/stadium_upcoming"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/md_grey_500" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/team1_upcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_20sdp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/team_logo_1_upcoming"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        tools:src="@drawable/matches_vector" />

                    <TextView
                        android:id="@+id/sn_team_1_upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_toEndOf="@+id/team_logo_1_upcoming"
                        android:textColor="?attr/textcolor"
                        android:textSize="@dimen/_14sdp"
                        tools:text="SN" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/team1_upcoming"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_8sdp">


                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/team_logo_2_upcoming"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        tools:src="@drawable/matches_vector" />

                    <TextView
                        android:id="@+id/sn_team_2_upcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toStartOf="@+id/team_logo_2_upcoming"
                        android:textColor="?attr/textcolor"
                        android:textSize="@dimen/_14sdp"
                        tools:text="IND" />


                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/match_date_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_11sdp"
                tools:text="Sep 03 2017, Sun" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
