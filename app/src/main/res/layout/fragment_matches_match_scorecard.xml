<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_tabs_matches_scorecard"
        layout="@layout/common_toolbar_tabs" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_tabs_matches_scorecard">

        <include
            android:id="@+id/scorecard_viewpager"
            layout="@layout/common_viewpager" />
    </RelativeLayout>

    <TextView
        android:id="@+id/no_data_no_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_13sdp" />

    <include
        android:id="@+id/progress"
        layout="@layout/common_progressbar" />

</RelativeLayout>